[[/* -*- indent-tabs-mode: nil -*- */]]

[[define "define_usepercent"]]
  span[class=Class] #{Value}%
[[end]]

[[define "define_tooltipable"]]
  span
    span.tooltipable
      //- [data-toggle="tooltip"|"popover"] // done in js now
      [data-placement="auto left"]
      [data-content=Full]
      | #{Short}
    span.tooltipabledots.inlinecode
      [data-placement="auto left"]
      [data-content=Full]
      | ...
[[end]]

[[define "define_ifbytes_rows"]]
  each $if in Data.IFbytes.List
    |<tr key=#{$if.NameKey}>
      td #{$if.NameHTML}
      td.digital #{$if.DeltaIn}
      td.digital #{$if.DeltaOut}
      td.digital #{$if.In}
      td.digital #{$if.Out}
    |</tr>
[[end]]

[[define "define_iferrors_rows"]]
  each $if in Data.IFerrors.List
    |<tr key=#{$if.NameKey}>
      td #{$if.NameHTML}
      td.digital #{$if.DeltaIn}
      td.digital #{$if.DeltaOut}
      td.digital #{$if.In}
      td.digital #{$if.Out}
    |</tr>
[[end]]

[[define "define_ifpackets_rows"]]
