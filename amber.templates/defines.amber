[[define "define_ifbytes_table"]]
  table.table1.stripe-table
    thead
      tr
        th Interface
        th.digital.nobr In
          span.unit[title="bits per second"]
            b b
            | ps
        th.digital.nobr Out
          span.unit[title="bits per second"]
            b b
            | ps
        th.digital.nobr In
          span.unit[title="total modulo 4G"] %4G
        th.digital.nobr Out
          span.unit[title="total modulo 4G"] %4G
    tbody
      [[with GET "bracket_ifrows"]][[.]][[DEL "bracket_ifrows"]][[else]]
        [[template "define_ifbytes_rows" .]][[end]]
[[end]]

